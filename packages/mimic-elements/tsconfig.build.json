{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"noEmit": false,
		"emitDeclarationOnly": true,
		"incremental": false,
		"types": [
			"vite/client",
		]
	},
	"include": [
		"./src/**/*.ts",
		"./src/**/*.d.ts",
		"./src/**/*.js",
	],
	"exclude": [
		"./**/*.demo.ts",
		"./**/*.test.ts",
		"./**/*.bench.ts",
	]
}