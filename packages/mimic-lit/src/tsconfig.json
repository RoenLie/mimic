{
	"extends": "@roenlie/tsconfig",
	"compilerOptions": {
		"moduleResolution": "NodeNext",
		"module": "ESNext",
		"target": "ESNext",
		"outDir": "../dist",
		"rootDir": ".",
		"baseUrl": ".",
		"noEmit": false,
		"emitDeclarationOnly": true,
		"incremental": false,
		"types": [
			"vite/client",
			"reflect-metadata"
		]
	},
	"include": [
		"./**/*.ts",
		"./**/*.d.ts",
		"./**/*.js",
	],
	"exclude": [
		"./**/*.test.ts",
		"./**/*.bench.ts",
	]
}