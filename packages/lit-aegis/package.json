{
	"name": "@roenlie/lit-aegis",
	"version": "1.0.25",
	"description": "Dependency injection framework based on LIT and inversify.",
	"author": {
		"name": "Kristoffer Roen-Lie",
		"url": "https://github.com/RoenLie"
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/RoenLie/mimic.git"
	},
	"bugs": {
		"url": "https://github.com/RoenLie/mimic/issues"
	},
	"homepage": "https://github.com/RoenLie/mimic#readme",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./*": "./dist/*"
	},
	"scripts": {
		"test": "vitest",
		"dev": "concurrently npm:watch-*",
		"watch-js": "vite build --watch",
		"watch-ts": "tsc --project ./src/tsconfig.json --watch",
		"clean-dist": "rimraf dist",
		"create-indexes": "package-toolbox build-indexes",
		"create-exports": "package-toolbox build-exports",
		"build": "pnpm clean-dist && concurrently npm:create-* && concurrently npm:build-*",
		"build-js": "vite build",
		"build-ts": "tsc --project ./src/tsconfig.json",
		"updatedeps": "pnpm update --latest",
		"increment-version": "package-toolbox increment-version"
	},
	"dependencies": {
		"@roenlie/mimic-core": "workspace:^",
		"deepmerge-ts": "^5.1.0",
		"inversify": "^6.0.2"
	},
	"peerDependencies": {
		"lit": "*"
	},
	"devDependencies": {
		"happy-dom": "^12.10.3",
		"lit": "^3.1.0"
	},
	"sideEffects": [
		"./dist/annotations/annotations.js",
		"./dist/utilities/reflect-shim.js"
	]
}